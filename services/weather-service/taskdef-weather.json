{
  "containerDefinitions": [{
    "name": "weather-service",
    "image": "449591255785.dkr.ecr.eu-west-1.amazonaws.com/weather-service",
    "environment": [
      {"name": "PORT", "value": "8080"},
      {"name": "FORECAST_API", "value": "https://api.open-meteo.com/v1/forecast"},
      {"name": "LOCATION_SERVICE_URL", "value": "http://location-service:8081/api/locations"}
    ],
    "portMappings": [{"containerPort": 8080, "protocol": "tcp", "name": "weather-service", "appProtocol": "http"}],
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/weather-service",
        "awslogs-region": "eu-west-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::449591255785:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::449591255785:role/ecsTaskRole",
  "family": "weather-service"
}